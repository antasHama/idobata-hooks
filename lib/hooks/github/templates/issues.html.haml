%div
  %span= avatar_image_tag payload.sender.avatar_url
  %a{href: payload.sender.html_url}= payload.sender.login
  = render_action payload, 'issue'
  %a{href: payload.issue.html_url} #{payload.repository.full_name}##{payload.issue.number}
  %b= payload.issue.title

= md payload.issue.body if payload.action == 'opened'
